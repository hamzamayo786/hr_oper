<%= flash[:notice] %>
    <div class="card my-5 rounded-0">
    
        <div class="card-body">
            <h1 class="text-center"> List Of Employees</h1>
        </div>
    </div>
    <div class="col-lg-12 my-2 ">

        <%= link_to 'Create New Employee', new_employee_path, class:"btn btn-primary btn-lg rounded-0"%>
    </div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name </th>
            <th> Email</th>
            <th>Age </th>
            <th>Contact </th>
            <th>Address </th>
            <th>Actions </th>

        </tr>
    </thead>
    <tbody>
        <% @employees.each do |employee| %>
            <tr>
                <td><%= employee.name %></td>
                <td><%= employee.email %></td>
                <td><%= employee.age %></td>
                <td><%= employee.contact %></td>
                <td><%= employee.full_address %></td>
                <td>
                <div class="dropdown">
                  <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                    Actions
                  </button>
                  <ul class="dropdown-menu bg-dark text-light" aria-labelledby="dropdownMenuButton1">
                        <li><%= link_to 'edit', edit_employee_path(employee),   class:'dropdown-item bg-dark text-light rounded-0'%>
                        </li>
                        <li><%= link_to 'View', employee_path(employee),   class:'dropdown-item bg-dark text-light rounded-0'%>
                        </li>
                        <li><%= link_to 'delete', employee_path(employee), method: :delete, 
                        data:{confirm: "Are you sure You want to delete this employee"},
                           class:'dropdown-item bg-dark text-light rounded-0'%>
                        </td>
                         </li>
                  </ul>
                </div>



                
            </tr>
        <%end%>
    </tbody>

</table>