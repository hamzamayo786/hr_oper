                <%end%>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <%= form.submit class:"btn btn-primary btn-lg rounded-0 my-2" %>
            <%= link_to 'Back To Employees', employees_path,  class:"btn btn-outline-primary btn-lg rounded-0 my-2" %>

        </div>
        
    </div>
    
<%end%>

