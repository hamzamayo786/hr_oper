                    <p class="text-danger"><%= message%> </p>
                <%end%>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="form-group">
                <%= form.label :employee_title, class:"mb-2"%>
                <%= form.text_field  :employee_title, class:"form-control form-control-lg rounded-0"%>                
                <% @employee.errors.full_messages_for(:employee_title).each do |message| %> 
                    <p class="text-danger"><%= message%> </p>
                <%end%>
