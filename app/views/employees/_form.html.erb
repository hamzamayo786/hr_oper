<%= form_with  model: employee do |form| %>
    <div class="row">
        <div class="col-lg-6">
            <div class="form-group">
                <%= form.label :First_Name, class:"mb-2"%>
                <%= form.text_field  :f_name, class:"form-control form-control-lg rounded-0"%>                
