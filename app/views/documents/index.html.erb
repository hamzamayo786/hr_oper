<%= flash[:notice] %>
    <div class="card my-5 rounded-0">
    
        <div class="card-body">
            <h1 class="text-center"> List Of Employee Documents</h1>
        </div>
    </div>
    <div class="col-lg-12 my-2 ">

        <%= link_to 'Create New Document', new_document_path, class:"btn btn-primary btn-lg rounded-0"%>
    </div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name </th>
            <th> Doc Type</th>
            <th>Employee </th>
            <th>Actions </th>

        </tr>
    </thead>
    <tbody>
        <% @documents.each do |document| %>
            <tr>
                <td><%= document.name %></td>
                <td><%= document.doc_type %></td>
                <td><%= link_to document.employee.name, employee_path(document.employee) %></td>
                <td><div class="dropdown">
                <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                  Actions
                </button>
                <ul class="dropdown-menu bg-dark text-light" aria-labelledby="dropdownMenuButton1">
                  <li><%= link_to 'edit', edit_document_path(document),   class:'dropdown-item bg-dark text-light rounded-0'%>
                  </li>
                  <li><%= link_to 'View', document_path(document),   class:'dropdown-item bg-dark text-light rounded-0'%>
                  </li>
                  <li><%= link_to 'delete', document_path(document), method: :delete, 
                  data:{confirm: "Are you sure You want to delete this documents"},
                     class:'dropdown-item bg-dark text-light rounded-0'%>
                  </td>
  </li>
                </ul>
              </div>



                
            </tr>
        <%end%>
    </tbody>

</table>