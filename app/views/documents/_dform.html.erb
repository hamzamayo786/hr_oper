<%= form_with  model: document do |form| %>
    <div class="row">
        <div class="col-lg-6">
            <div class="form-group">
                <%= form.label :name, class:"mb-2"%>
                <%= form.text_field  :name, class:"form-control form-control-lg rounded-0"%>                
                <% @document.errors.full_messages_for(:name).each do |message| %> 
                    <p class="text-danger"><%= message%> </p>
                <%end%>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <%= form.label :doc_type, class:"mb-2"%>
                <%= form.select  :doc_type, options_for_select(Document::DOC_TYPES, selected:
                document.doc_type),{prompt: 'Select Document Type'},{ class:"form-select form-select-lg
                rounded-0" }%>                
                <% @document.errors.full_messages_for(:doc_type).each do |message| %> 
                    <p class="text-danger"><%= message%> </p>
                <%end%>
            </div>
        </div>
    </div>

   
    
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <%= form.label :employee_id, class:"mb-2"%>
                <%= form.select  :employee_id, options_for_select(Employee.all.map{|employee|
                [employee.name_with_email, employee.id]}, selected:
                document.employee_id),{prompt: 'Select employee'},{ class:"form-select form-select-lg
                rounded-0" }%>

                <%#= form.select  :employee_id, options_for_select(Employee.pluck(:f_name, :id), selected:
                document.employee_id),{prompt: 'Select employee'},{ class:"form-select form-select-lg
                rounded-0" }%>

                <% @document.errors.full_messages_for(:employee_id).each do |message| %> 
                    <p class="text-danger"><%= message%> </p>
                <%end%>
            </div>
        </div>

        <div>  
                <%= form.label :image , class:"my-1" %> <br>
                <%= form.file_field :image %>
        </div>

    </div>

    <div class="row">
        <div class="col-lg-12">
            <%= form.submit class:"btn btn-primary btn-lg rounded-0 my-2" %>
            <%= link_to 'Back To Documents', documents_path,  class:"btn btn-outline-primary btn-lg rounded-0 my-2" %>

        </div>
        
    </div>
    
<%end%>

